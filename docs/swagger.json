                              ]
                            }
                          },
                          "type": {
                            "type": "string",
                            "example": "string.empty"
                          },
                          "context": {
                            "type": "object",
                            "properties": {
                              "limit": {
                                "type": "integer",
                                "example": 8
                              },
                              "label": {
                                "type": "string",
                                "example": "password"
                              },
                              "value": {
                                "type": "string",
                                "example": ""
                              },
                              "key": {
                                "type": "string",
